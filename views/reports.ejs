    <script>
        function fetchAndPlotData() {
            var selectedProduct = document.getElementById("select2Single").value;
            if (selectedProduct) {
                axios
                    .get(`http://localhost:5000/report/${encodeURIComponent(selectedProduct)}`)
                    .then(response => {
                        const data = response.data;

                        // Sort the data based on the orderDate in ascending order
                        data.sort((a, b) => new Date(a.orderDate) - new Date(b.orderDate));

                        // Resample the data into weeks and months
                        const weeklyData = resampleData(data, 'week');
                        const monthlyData = resampleData(data, 'month');

                        // Populate the "Daily" table with the original data
                        populateTableWithData(data, 'dataTableDaily');

                        // Populate the "Weekly" table with the weekly resampled data
                        populateTableWithData(weeklyData, 'dataTableWeekly');

                        // Populate the "Monthly" table with the monthly resampled data
                        populateTableWithData(monthlyData, 'dataTableMonthly');

                        // Plot the bar graph with the original data
                        plotBarGraph(data);
                    })
                    .catch(error => {
                        console.error(error);
                    });
            } else {
                alert("Please select a product.");
            }
        }

        function resampleData(data, interval) {
            const resampledData = [];
            let currentDate = null;
            let currentSalesTotal = 0;

            for (const item of data) {
                const date = new Date(item.orderDate);
                if (!currentDate) {
                    currentDate = getIntervalStartDate(date, interval);
                }

                if (date >= currentDate && date < getIntervalEndDate(currentDate, interval)) {
                    currentSalesTotal += item.sales;
                } else {
                    resampledData.push({
                        sales: currentSalesTotal,
                        orderDate: currentDate.toISOString().slice(0, 10) // Format as "YYYY-MM-DD"
                    });

                    currentDate = getIntervalStartDate(date, interval);
                    currentSalesTotal = item.sales;
                }
            }

            // Add the last interval
            if (currentDate) {
                resampledData.push({
                    sales: currentSalesTotal,
                    orderDate: currentDate.toISOString().slice(0, 10) // Format as "YYYY-MM-DD"
                });
            }

            return resampledData;
        }

        function getIntervalStartDate(date, interval) {
            const startDate = new Date(date);
            startDate.setHours(0, 0, 0, 0);
            if (interval === 'week') {
                const dayOfWeek = startDate.getDay();
                startDate.setDate(startDate.getDate() - dayOfWeek); // Set to the start of the week (Sunday)
            } else if (interval === 'month') {
                startDate.setDate(1); // Set to the 1st day of the month
            }
            return startDate;
        }

        function getIntervalEndDate(startDate, interval) {
            const endDate = new Date(startDate);
            if (interval === 'week') {
                endDate.setDate(endDate.getDate() + 7);
            } else if (interval === 'month') {
                endDate.setMonth(endDate.getMonth() + 1);
            }
            endDate.setHours(0, 0, 0, 0);
            return endDate;
        }

        function populateTableWithData(data, tableId) {
            const tableBody = document.querySelector(`#${tableId} tbody`);
            tableBody.innerHTML = "";

            data.forEach(item => {
                const row = document.createElement("tr");
                const labelCell = document.createElement("td");
                const valueCell = document.createElement("td");

                labelCell.textContent = item.orderDate;
                valueCell.textContent = item.sales;

                row.appendChild(labelCell);
                row.appendChild(valueCell);
                tableBody.appendChild(row);
            });
        }

        function plotBarGraph(data) {
            const labels = data.map(item => item.orderDate);
            const quantities = data.map(item => item.sales);

            const ctx = document.getElementById('myBarChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Sales',
                        data: quantities,
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
    </script>
  
